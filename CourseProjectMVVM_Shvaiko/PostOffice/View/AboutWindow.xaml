<Window x:Class="PostOffice.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PostOffice.View"
        mc:Ignorable="d"
        Title="О программе..." Height="200" Width="300" FontStyle="Normal" FontFamily="Verdana" FontSize="14">
    <Grid>
        <StackPanel Margin="5" Orientation="Vertical">
          <StackPanel Margin="5" Orientation="Horizontal">
              <TextBlock Text="Версия сборки:"/>
              <TextBlock x:Name="TxbAssembly"/>
          </StackPanel>
            <StackPanel Margin="5,0,5,5" Orientation="Horizontal">
                <TextBlock Text="Программа:     "/>
                <TextBlock x:Name="TxbProduction"/>

            </StackPanel>

        </StackPanel>
        
    </Grid>
</Window>
